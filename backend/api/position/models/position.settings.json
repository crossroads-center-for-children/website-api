{
  "kind": "collectionType",
  "collectionName": "positions",
  "info": {
    "name": "Position"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "paid",
        "volunteer"
      ]
    },
    "student_contact": {
      "type": "boolean"
    },
    "description": {
      "type": "text"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "contact": {
      "model": "people"
    }
  }
}
