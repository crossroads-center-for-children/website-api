{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Subtitle": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "content": {
      "type": "richtext"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "tags": {
      "collection": "tag",
      "via": "posts"
    },
    "comments": {
      "collection": "comment",
      "via": "post"
    },
    "authors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "posts",
      "dominant": true
    },
    "collections": {
      "collection": "collection",
      "via": "posts"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "photos": {
      "collection": "photo",
      "via": "posts"
    },
    "videos": {
      "collection": "video",
      "via": "posts"
    },
    "featured": {
      "type": "boolean"
    },
    "classes": {
      "via": "posts",
      "collection": "class"
    }
  }
}
