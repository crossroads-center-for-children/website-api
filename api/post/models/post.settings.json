{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Subtitle": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "content": {
      "type": "richtext"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "post_types": {
      "via": "posts",
      "collection": "post-type"
    },
    "tags": {
      "via": "posts",
      "collection": "tag"
    },
    "comments": {
      "via": "post",
      "collection": "comment"
    }
  }
}
